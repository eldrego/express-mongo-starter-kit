{
  "name": "trial",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test concurrently \"npm run client-test\" \"\"",
    "server-test": "cross-env NODE_ENV=test nyc _mocha server/test --exit",
    "start": "cross-env NODE_ENV=production npm run server-prod",
    "dev": "cross-env NODE_ENV=development npm run server-dev",
    "server-prod": "npm run build && node ./build/index.js",
    "server-dev": "cross-env NODE_ENV=development nodemon index.js --exec babel-node",
    "server-build": "babel -d ./build ./src -s",
    "build": "npm run clean && npm run server-build",
    "clean": "rm -rf build && mkdir build",
    "open-cov": "open coverage/lcov-report/index.html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.17.2",
    "concurrently": "^4.1.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.15.3",
    "mongoose": "^5.2.2",
    "prop-types": "^15.7.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.0.0-beta.55",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.2.0",
    "chai": "^3.2.0",
    "chai-http": "^1.0.0",
    "codecov": "^3.0.4",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.10.0",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^6.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.3.0",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.21.0",
    "supertest": "^3.1.0"
  }
}
